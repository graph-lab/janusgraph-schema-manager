<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist${assembly.suffix}</id>
  <formats>
  	<format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
  	<dependencySet>
  		<outputDirectory>lib</outputDirectory>
  		<unpack>false</unpack>
  	</dependencySet>
  </dependencySets>
  <fileSets>
	<fileSet>
		<directory>bin</directory>
		<includes>
			<include>schema_manager.bat</include>
			<include>schema_manager.sh</include>
			<include>run_script.sh</include>
			<include>instance_tool.sh</include>
			<include>log4j-console.properties</include>
		</includes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<directory>bin</directory>
		<includes>
			<include>${extra.scripts}</include>
		</includes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<directory>target/dist</directory>
		<outputDirectory>extras</outputDirectory>
		<includes>
			<include>${elasticsearch.dist.dir}</include>
		</includes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<directory>examples</directory>
		<includes>
			<include>graph-config/dynamodb-remote.properties</include>
		</includes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<directory>docs</directory>
		<excludes>
			<exclude>*.sh</exclude>
		</excludes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<directory>examples</directory>
		<includes>
			<include>${extra.examples}</include>
		</includes>
		<fileMode>0755</fileMode>
	</fileSet>
	<fileSet>
		<fileMode>0644</fileMode>
		<includes>
			<include>README.md</include>
		</includes>
	</fileSet>
  </fileSets>
</assembly>